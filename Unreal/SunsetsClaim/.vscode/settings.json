{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "ms-vscode.cpptools",
  "C_Cpp.intelliSenseEngine": "default", // Or "clangd" if using that instead
  "C_Cpp.intelliSenseEngineFallback": "Enabled",
  "C_Cpp.default.cppStandard": "c++20",
  "C_Cpp.default.intelliSenseMode": "macos-clang-arm64", // Adjust based on OS
  "C_Cpp.default.includePath": [
    "${workspaceFolder}/**",
    "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/include/c++/v1" // Only for macOS
  ],
  "files.associations": {
    "*.h": "cpp"
  },
  "docthis.includeAuthorTag": true,
  "docthis.includeDateTag": true,
  "docthis.includeDescriptionTag": true
}
